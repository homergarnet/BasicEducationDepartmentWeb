<!DOCTYPE html>
<style>
    .index-img {
        height: inherit !important;
    }
</style>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Page.Title</title>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/sweetalert2-dist/dist/sweetalert2.all.min.js"></script>

    <!-- autocomplete styles-->
    <link href="@Url.Content("~/Scripts/jquery-ui/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-ui/jquery-ui.js"></script>

    <!-- for data tables -->
    <link href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap4.min.js"></script>

    @*@Scripts.Render("~/bundles/bootstrap")*@
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")*@

</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img class="img-fluid st-dominic-logo" src="~/Images/st-dom-logo.png" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#gallery">Gallery</a>
                    </li>
                </ul>
                <h1 class="display-1 font-weight-bold text-center text-black" style="color: black; font-size: 20px; -webkit-text-stroke: 0px black; -webkit-text-fill-color: black; float: left; margin-left: 5000px; text-align: center; vertical-align: middle; margin: 0; padding: 0; ">

                    Online Student Consultation Ticketing and Tracking System

                </h1>
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Login">Login</a>
                    </li>

                   @*<li class="nav-item active">
                        <a class="nav-link" href="/Home/Signup">Signup</a>
                    </li>*@
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid index-img " style="background-image:none;">
        <div class="row">
            <div class="col text-center">
                <img src="~/Images/DominicLayout.png" class="img-fluid img-card-c-height" style="float: left; margin-right: 150px; width: 120%; height: 100%; text-align: center; vertical-align: middle;" />

                <div class="mx-auto" style="padding-top: 0%; ">

                    <div class="">
                        <h3 class="dim-white">
                        </h3>
                    </div>

                </div>

            </div>
        </div>

    </div>





    @RenderBody()



    @RenderSection("scripts", required: false)
    <script>

        setTimeout(function () {

            $(".dataTables_filter").find("input").attr("readonly", "");
            $(".dataTables_filter").find("input").on("click", function () {
                $(this).removeAttr("readonly")
            });
            $(".dataTables_filter").find("input").css({
                "background-color": "white"
            });

        }, 300);
    </script>
</body>
</html>
