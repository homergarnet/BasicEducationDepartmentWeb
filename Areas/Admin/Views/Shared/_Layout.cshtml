                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                    </ul>
                </div>
            </div>
        </div>*@

    <div class="">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <script>

        setTimeout(function () {

            $(".dataTables_filter").find("input").attr("readonly", "");
            $(".dataTables_filter").find("input").on("click", function () {
                $(this).removeAttr("readonly")
            });
            $(".dataTables_filter").find("input").css({
                "background-color": "white"
            });

        }, 300);
    </script>
</body>
</html>