    <script>

        setTimeout(function () {

            $(".dataTables_filter").find("input").attr("readonly", "");
            $(".dataTables_filter").find("input").on("click", function () {
                $(this).removeAttr("readonly")
            });
            $(".dataTables_filter").find("input").css({
                "background-color": "white"
            });

        }, 300);
    </script>
    <script>
        $(function () {

            let containerNotification = "";

            $.ajax({
                url: '/dashboard/get-admin-by-id',
                headers: { 'Authorization': 'Bearer ' + localStorage.getItem('admin_token') },
                method: 'GET',
                //data: {
                //    DateFrom: _DateFrom,
                //    DateTo: _DateTo,
                //    SelectBy: selectBy,

                //},

            }).done(function (res) {

                $(".admin-name").text(res.APName);
                $(".a-display-name").text(res.APName);

                if (res.APImageName != null) {

                    $(".dashboard-p-image").attr("src", localStorage.getItem('api') + "images/" + res.APImageName);

                }

            }).fail(function (err) {
                console.log("error: ", err)

            });

            //for carret button
            $("button.carret-arrow").on("click", function (e) {
                e.preventDefault();

                if (containerNotification == "" || containerNotification == "carret") {
                    if (containerNotification == "carret") {
                        containerNotification = "";
                    }
                    $("div.container-notification").toggleClass("d-none");
                }

                $.ajax({
                    url: '/dashboard/admin-carret-field',
                    headers: { 'Authorization': 'Bearer ' + localStorage.getItem('admin_token') },
                    method: 'GET',
                    //data: {
                    //    DateFrom: _DateFrom,
                    //    DateTo: _DateTo,
                    //    SelectBy: selectBy,

                    //},
                    dataType: 'html'
                }).done(function (resp) {

                    $("div.container-notification").html(resp);

                }).fail(function (err) {
                    console.log("error: ", err)

                });

            });

        });
    </script>

    <script>
        let arrow = document.querySelectorAll(".arrow");
        for (var i = 0; i < arrow.length; i++) {
            arrow[i].addEventListener("click", (e) => {
                let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
                arrowParent.classList.toggle("showMenu");
            });
        }

